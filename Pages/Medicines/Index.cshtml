@page
@model RazorSecond.Pages.Medicines.IndexModel

@{
    ViewData["Title"] = "药品信息";
}

@* <h1>@ViewData["Title"]列表</h1> *@

<p>
    <a asp-page="Create" class="btn btn-primary">新增</a>
</p>
<form>
    <p>
        编码/名称/厂家: <input type="text" asp-for="SearchString" />
        <input type="submit" value="搜索" />
        类别:
        <select onchange="this.form.submit()" asp-for="MedicineType" asp-items="Html.GetEnumSelectList<MedicineType>()">
            <option value="">全部</option>
        </select>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Medicine[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medicine[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medicine[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medicine[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medicine[0].LeftMonths)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medicine[0].Factory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Medicine) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeftMonths)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Factory)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">编辑</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">详情</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">删除</a>
            </td>
        </tr>
}
    </tbody>
</table>
