@model RazorSecond.Pages.Stuffs.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Stuff</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Stuff.Name" class="control-label"></label>
                <input asp-for="Stuff.Name" class="form-control" />
                <span asp-validation-for="Stuff.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stuff.Gender" class="control-label"></label>
                <select asp-for="Stuff.Gender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()">
                    <option selected="selected" value=""></option>
                </select>                    
                <span asp-validation-for="Stuff.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stuff.Title" class="control-label"></label>
                <select asp-for="Stuff.Title" class="form-control"  asp-items="Html.GetEnumSelectList<Title>()">
                    <option selected="selected" value=""></option>
                </select>
                <span asp-validation-for="Stuff.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stuff.Department" class="control-label"></label>
                <select asp-for="Stuff.Department" class="form-control"  asp-items="Html.GetEnumSelectList<Department>()">
                    <option selected="selected" value=""></option>
                </select>
                <span asp-validation-for="Stuff.Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
