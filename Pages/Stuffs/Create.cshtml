@page
@model RazorSecond.Pages.Stuffs.CreateModel

@{
    ViewData["Title"] = "创建";
}

<h1>@ViewData["Title"]</h1>

@* <h4>Stuff</h4> *@
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Stuff.Name" class="control-label"></label>
                <input asp-for="Stuff.Name" class="form-control" />
                <span asp-validation-for="Stuff.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stuff.Gender" class="control-label"></label>
                <select asp-for="Stuff.Gender" class="custom-select" asp-items="Html.GetEnumSelectList<Gender>()">
                    <option value="">==请选择==</option>                   
                </select>                    
                <span asp-validation-for="Stuff.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stuff.Title" class="control-label"></label>
                <select asp-for="Stuff.Title" class="custom-select"  asp-items="Html.GetEnumSelectList<Title>()">  
                    <option value="">==请选择==</option>                  
                </select>
                <span asp-validation-for="Stuff.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stuff.Department" class="control-label"></label>
                <select asp-for="Stuff.Department" class="custom-select"  asp-items="Html.GetEnumSelectList<Department>()">
                    <option value="">==请选择==</option>                   
                </select>
                <span asp-validation-for="Stuff.Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="创建" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">返回列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
