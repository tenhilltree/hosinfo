@page
@model RazorSecond.Pages.TreatRecords.IndexModel

@{
    ViewData["Title"] = "接诊记录";
}

@* <h1>@ViewData["Title"]列表</h1> *@

<p>
    <a asp-page="Create" class="btn btn-primary">新增</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TreatRecord[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TreatRecord[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TreatRecord[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TreatRecord[0].DoctorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TreatRecord[0].MedicineId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TreatRecord[0].ReleaseDate)
            </th>
            @* <th></th> *@
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TreatRecord) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedicineName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            @* <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td> *@
        </tr>
}
    </tbody>
</table>
