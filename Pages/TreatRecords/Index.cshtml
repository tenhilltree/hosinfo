@page
@model RazorSecond.Pages.TreatRecords.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TreatRecord[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TreatRecord[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TreatRecord[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TreatRecord[0].Doctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TreatRecord[0].Medicine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TreatRecord[0].ReleaseDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TreatRecord) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medicine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
